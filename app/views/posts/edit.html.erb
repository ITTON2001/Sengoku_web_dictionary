<p>編集</p>

<%= form_tag("/posts/#{@post.id}/update",{multipart: true}) do %>
  <p>一言紹介</p>
  <textarea name="mini_content"><%= @post.mini_content %></textarea>
  <p>説明</p>
  <textarea name="content"><%= @post.content %></textarea>
  <p>出身地/活躍地</p>
  <select name="map_id">
    <option><%= @post.map_id %></option>
    <% @maps.each do |map| %>
      <option>
      <%= map.id %>
      <%= map.map_name %>
      </option>
    <% end %>
  </select>

  <p>画像</p>
  <input name="image" type="file">

  <input type="submit" value="保存">
<% end %>


