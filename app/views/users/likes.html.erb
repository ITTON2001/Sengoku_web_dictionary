<div class="user_image">
  <%= image_tag "/user_images/#{@user.image_name}" %>
</div>

<h2><%= @user.name %></h2>
<p><%= @user.email %></p>

<% if @user.id == @current_user.id %>
  <%= link_to("編集","/users/#{@user.id}/edit") %>
<% end %>

<li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
<li><%= link_to("評価した投稿", "/users/#{@user.id}/likes") %></li>

<% if @likes.none? %>
  <p>評価した投稿がありません</p>

<% else %>
  <div class="post_index">
    <p>評価した投稿</p>
    <table border="2">
      <tr>
        <th></th>
        <th>名前</th>
        <th>説明</th>
      </tr>

      <% @likes.each do |like| %>
        <% post = Post.find_by(id: like.post_id) %>
          <tr>
              <td><%= image_tag "/post_images/#{post.post_image}" %></td>
              <td><%= link_to(post.post_name, "/posts/#{post.id}" ) %></td>
              <td><%= post.mini_content %></td>
          </tr>
      <% end %>
    </table>
  </div>


<% end %>