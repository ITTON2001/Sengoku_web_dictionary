<div class = "login_form">
  <%= form_tag("/login") do %>
    <div class = "login_form_content">
      <p>メールアドレス</p>
      <input name="email" value="<%= @email %>">

      <p>パスワード</p>
      <input type="password" name="password" value="<%= @password %>">

      <div class = "login_button">
        <input type="submit" value="ログイン">
      </div>
    </div>
    <div class = "error_message">
      <% if @error_message %>
        <%= @error_message %>
      <% end %>
    </div>
  <% end %>
</div>

